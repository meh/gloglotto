project gloglotto ;

using clang ;

lib gloglotto : [ glob source/*.cpp ]
	: <cxxflags>-std=c++11
	: <include>include
	: <linkflags>"-lGL -lGLEW -lglut"
	;

import testing ;
lib    boost_unit_test_framework ;

for name in matrix vector {
	unit-test test::$(name) : tests/$(name).cpp boost_unit_test_framework
		: <cxxflags>"-std=c++11 -Iinclude"
		: <library>gloglotto
		;
}
