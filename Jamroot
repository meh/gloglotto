project gloglotto ;

using clang ;

lib gloglotto : [ glob source/*.cpp ]
	: <cxxflags>-std=c++11
	: <include>include
	: <linkflags>"-lGL -lGLEW -lglut"
	;

import testing ;

for name in matrix vector angle rgba {
	unit-test test::$(name) : tests/$(name).cpp
		: <cxxflags>"-std=c++11 -Iinclude -Itests/amirite"
		: <library>gloglotto
		;
}
