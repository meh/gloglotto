#ifndef _GLOGLOTTO_MATH_H
#define _GLOGLOTTO_MATH_H

#include <cmath>

constexpr
long double
operator "" _degrees (long double literal)
{
	return literal;
}

constexpr
long double
operator "" _radians (long double literal)
{
	return literal * (180 / M_PI);
}

constexpr
long double
operator "" _hours (long double literal)
{
	return literal * (1.0 / 15.0);
}

#include <gloglotto/maths/vector>
#include <gloglotto/maths/matrix>

#endif
