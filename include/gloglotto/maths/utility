#ifndef _GLOGLOTTO_MATH_UTILITY_H
#define _GLOGLOTTO_MATH_UTILITY_H

#include <gloglotto/maths/matrix>
#include <gloglotto/maths/angle>

#include <utility>

namespace gloglotto
{
	namespace math
	{
		matrix<4, 4> perspective (angle fov, float aspect, std::pair<float, float> z);
		matrix<4, 4> orthographic (std::pair<float, float> x, std::pair<float, float> y, std::pair<float, float> z);

		template <int Size = 3, typename Type = float>
		matrix<Size, Size, Type> rotation (angle a, float x, float y, float z);
	}
}

#include <gloglotto/maths/utility.tpp>

#endif
