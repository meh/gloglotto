#ifndef _GLOGLOTTO_PRIMITIVE_H
#define _GLOGLOTTO_PRIMITIVE_H

#include <gloglotto/headers>

namespace gloglotto
{
	namespace primitive
	{
		static constexpr unsigned point    = GL_POINTS;
		static constexpr unsigned line     = GL_LINES;
		static constexpr unsigned triangle = GL_TRIANGLES;
		static constexpr unsigned quad     = GL_QUADS;
		static constexpr unsigned polygon  = GL_POLYGON;

		namespace strip
		{
			static constexpr unsigned line     = GL_LINE_STRIP;
			static constexpr unsigned triangle = GL_TRIANGLE_STRIP;
			static constexpr unsigned quad     = GL_QUAD_STRIP;
		}

		namespace loop
		{
			static constexpr unsigned line = GL_LINE_LOOP;
		}

		namespace fan
		{
			static constexpr unsigned triangle = GL_TRIANGLE_FAN;
		}
	}
}

#endif
