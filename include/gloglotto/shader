#ifndef _GLOGLOTTO_SHADER_H
#define _GLOGLOTTO_SHADER_H

#include <string>
#include <map>
#include <vector>
#include <typeinfo>

#include <gloglotto/math>

namespace gloglotto
{
	class shader final
	{
		public:
			template <class Function>
			shader (std::vector<std::string> attrs,
			        std::map<std::string, std::string> source,
			        Function lambda);

			~shader (void);

			template <typename ...Args>
			void call (Args... args);

			void uniform (std::string name, vector<1, float> data);
			void uniform (std::string name, vector<2, float> data);
			void uniform (std::string name, vector<3, float> data);
			void uniform (std::string name, vector<4, float> data);

			void uniform (std::string name, vector<1, int> data);
			void uniform (std::string name, vector<2, int> data);
			void uniform (std::string name, vector<3, int> data);
			void uniform (std::string name, vector<4, int> data);

			void uniform (std::string name, matrix<2, 2, float> data);
			void uniform (std::string name, matrix<3, 3, float> data);
			void uniform (std::string name, matrix<4, 4, float> data);

			void uniform (std::string name, matrix<2, 3, float> data);
			void uniform (std::string name, matrix<3, 2, float> data);
			void uniform (std::string name, matrix<2, 4, float> data);
			void uniform (std::string name, matrix<4, 2, float> data);
			void uniform (std::string name, matrix<3, 4, float> data);
			void uniform (std::string name, matrix<4, 3, float> data);

		private:
			unsigned int                _id;
			std::map<std::string, int>  _attributes;

			const std::type_info* _signature;
			void*                 _function;

			std::map<std::string, std::string> _source;
	};
}

#include <gloglotto/shader.tpp>

#endif
