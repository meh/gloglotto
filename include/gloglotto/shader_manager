#ifndef _GLOGLOTTO_SHADER_MANAGER_H
#define _GLOGLOTTO_SHADER_MANAGER_H

#include <string>
#include <map>
#include <vector>
#include <typeinfo>

#include <gloglotto/math>
#include <gloglotto/shader>

namespace gloglotto
{
	class shader_manager
	{
		public:
			shader_manager (void);
			~shader_manager (void);

			template <typename Function>
			shader* make (std::vector<std::string> attributes,
			              std::map<std::string, std::string> source,
			              Function lambda);

			template <typename Function>
			shader& add (std::string name,
			             std::vector<std::string> attributes,
			             std::map<std::string, std::string> source,
			             Function lambda);

			template <typename ...Args>
			shader& use (std::string name, Args... args);

		private:
			std::map<std::string, shader*> _shaders;
	};
}

#include <gloglotto/shader_manager.tpp>

#endif
