#ifndef _GLOGLOTTO_SHADER_MANAGER_H
#define _GLOGLOTTO_SHADER_MANAGER_H

#include <string>
#include <map>
#include <vector>
#include <typeinfo>

#include <gloglotto/math>
#include <gloglotto/shader>

namespace gloglotto
{
	#define with_shader(manager, ...) \
		for (auto& self : (manager.use(__VA_ARGS__)))

	class shader_manager
	{
		class shader_in_use
		{
			public:
				shader_in_use (shader* in_use);

				shader* begin (void);
				shader* end (void);

				shader& operator * (void);

			private:
				shader* _shader;
		};

		public:
			shader_manager (void);
			~shader_manager (void);

			shader* make (std::multimap<std::string, std::string> source) throw (invalid_operation, failed_compilation, failed_linking);

			template <typename Function>
			shader* make (std::multimap<std::string, std::string> source,  Function lambda) throw (invalid_operation, failed_compilation, failed_linking);

			shader& add (std::string name, std::multimap<std::string, std::string> source) throw (invalid_operation, failed_compilation, failed_linking);

			template <typename Function>
			shader& add (std::string name, std::multimap<std::string, std::string> source, Function lambda) throw (invalid_operation, failed_compilation, failed_linking);

			shader& get (std::string name);

			template <typename ...Args>
			shader_in_use use (std::string name, Args... args);

		private:
			std::map<std::string, shader*> _shaders;
	};
}

#include <gloglotto/shader_manager.tpp>

#endif
